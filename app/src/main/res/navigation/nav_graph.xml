<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/nav_splash">

    <fragment
        android:id="@+id/nav_splash"
        android:name="com.agamatech.worderworld.feature.splash.ui.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/nav_action_splash_to_lets_play"
            app:destination="@id/nav_lets_play" />
    </fragment>

    <fragment
        android:id="@+id/nav_lets_play"
        android:name="com.agamatech.worderworld.feature.lets_play.ui.LetsPlayFragment"
        tools:layout="@layout/fragment_lets_play">

        <action
            android:id="@+id/nav_action_lets_play_to_game"
            app:destination="@id/nav_game" />
        <action
            android:id="@+id/nav_action_lets_play_to_game_6"
            app:destination="@id/nav_game_6" />
        <action
            android:id="@+id/nav_action_lets_play_to_game_7"
            app:destination="@id/nav_game_7" />
        <action
            android:id="@+id/nav_action_lets_play_to_game_8"
            app:destination="@id/nav_game_8" />
    </fragment>

    <fragment
        android:id="@+id/nav_game"
        android:name="com.agamatech.worderworld.feature.game.ui.GameFragment"
        tools:layout="@layout/fragment_game">

        <argument
            android:name="word"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_game_6"
        android:name="com.agamatech.worderworld.feature.game.ui.GameFragment6"
        tools:layout="@layout/fragment_game_6">

        <argument
            android:name="word"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_game_7"
        android:name="com.agamatech.worderworld.feature.game.ui.GameFragment7"
        tools:layout="@layout/fragment_game_7">

        <argument
            android:name="word"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_game_8"
        android:name="com.agamatech.worderworld.feature.game.ui.GameFragment8"
        tools:layout="@layout/fragment_game_8">

        <argument
            android:name="word"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_store"
        android:name="com.agamatech.worderworld.feature.store.ui.StoreFragment"
        tools:layout="@layout/fragment_store">
    </fragment>

</navigation>