<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/left_edge"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:alpha="0"
            android:src="@drawable/gradient_red"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/right_edge"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:alpha="0"
            android:rotation="180"
            android:layout_alignParentEnd="true"
            android:src="@drawable/gradient_red"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bottom_edge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:layout_alignParentEnd="true"
            android:src="@drawable/gradient_red_vertical"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/arrow"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:visibility="invisible"
            android:layout_height="30dp"
            android:src="@drawable/triangle"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/score_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="0"
            android:alpha="0.2"
            android:textSize="130sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/button_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_centerHorizontal="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_arrow_back_24"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/score_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/black"
                android:text="0"
                android:alpha="0.0"
                android:textSize="100sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ball"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ball_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ball_1"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.WorderWorld.Ball"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>